{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",

                "${workspaceFolder}/main.c",
                "${workspaceFolder}/clean_input.c",
                "${workspaceFolder}/set_workflow.c",

                "${workspaceFolder}/workflows/arithmetic/solve_arithmetic.c",

                "${workspaceFolder}/general/add_parens.c",
                "${workspaceFolder}/general/calculate_result.c",
                "${workspaceFolder}/general/check_oprtr_exists.c",
                "${workspaceFolder}/general/check_parens_exist.c",
                "${workspaceFolder}/general/convert_d_to_str.c",
                "${workspaceFolder}/general/convert_str_to_d.c",
                "${workspaceFolder}/general/find_bounds.c",
                "${workspaceFolder}/general/find_nearest_parens.c",
                "${workspaceFolder}/general/insert_result.c",
                "${workspaceFolder}/general/parse_equation.c",
                "${workspaceFolder}/general/solve.c",

                "${workspaceFolder}/utils/collapse_str.c",
                "${workspaceFolder}/utils/expand_str.c",
                "${workspaceFolder}/utils/insert_str.c",
                "${workspaceFolder}/utils/is_oprtr.c",
                "${workspaceFolder}/utils/print_str.c",

                "-o",
                "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}